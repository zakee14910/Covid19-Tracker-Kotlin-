<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="horizontal" android:paddingEnd="16dp" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="0dp" android:textStyle="bold" android:textColor="@android:color/black" android:textAllCaps="true" android:padding="8dp" android:layout_weight="2" android:id="@+id/stateTv"/>

    <TextView android:layout_height="wrap_content" android:layout_width="0dp" android:textStyle="bold" android:textAllCaps="true" android:padding="8dp" android:layout_weight="1" android:id="@+id/confirmedTv" android:textAlignment="viewEnd"/>

    <TextView android:layout_height="wrap_content" android:layout_width="0dp" android:textStyle="bold" android:textAllCaps="true" android:padding="8dp" android:layout_weight="1" android:id="@+id/activeTv" android:textAlignment="viewEnd"/>

    <TextView android:layout_height="wrap_content" android:layout_width="0dp" android:textStyle="bold" android:textAllCaps="true" android:padding="8dp" android:layout_weight="1" android:id="@+id/recoveredTv" android:textAlignment="viewEnd"/>

    <TextView android:layout_height="wrap_content" android:layout_width="0dp" android:textStyle="bold" android:textAllCaps="true" android:padding="8dp" android:layout_weight="1" android:id="@+id/deathTv" android:textAlignment="viewEnd"/>

</LinearLayout>